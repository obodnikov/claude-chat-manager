# Claude Chat Manager Configuration Example
# Copy this file to .env and customize as needed

# ============================================================================
# Claude Desktop Settings
# ============================================================================

# Claude projects directory (default: ~/.claude/projects)
# CLAUDE_PROJECTS_DIR=/path/to/custom/projects

# Default export format (default: pretty)
# Options: pretty, markdown, book, raw, wiki
# CLAUDE_DEFAULT_FORMAT=pretty

# Logging level (default: INFO)
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# CLAUDE_LOG_LEVEL=INFO

# Terminal page height for paging (default: 24)
# CLAUDE_PAGE_HEIGHT=24

# ============================================================================
# OpenRouter API Configuration (for Wiki Feature)
# ============================================================================

# OpenRouter API Key (required for AI-generated wiki titles)
# Get your key at: https://openrouter.ai/keys
# OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxx

# Model to use for title generation (default: anthropic/claude-haiku-4.5)
# Options: anthropic/claude-haiku-4.5, anthropic/claude-3-haiku, openai/gpt-4o-mini, etc.
# OPENROUTER_MODEL=anthropic/claude-haiku-4.5

# OpenRouter API base URL (default: https://openrouter.ai/api/v1)
# OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# API request timeout in seconds (default: 30)
# OPENROUTER_TIMEOUT=30

# ============================================================================
# Wiki Generation Settings
# ============================================================================

# Maximum tokens to analyze for title generation (default: 2000)
# Higher = more context, but slower and more expensive
# WIKI_TITLE_MAX_TOKENS=2000

# Enable LLM-powered title generation (default: true)
# Set to false to use first user question as title
# WIKI_GENERATE_TITLES=true

# ============================================================================
# Wiki Filtering Settings
# ============================================================================

# Filter out trivial/pointless chats from wiki (default: true)
# When enabled, filters chats that are too short or appear to be warmup messages
# WIKI_SKIP_TRIVIAL=true

# Minimum number of messages required for a chat to be included (default: 3)
# Chats with fewer messages are considered trivial
# WIKI_MIN_MESSAGES=3

# Minimum total word count required for a chat (default: 75)
# Chats with fewer words across all messages are considered trivial
# WIKI_MIN_WORDS=75

# Keywords that indicate trivial chats (default: warmup,test,hello,hi,ready)
# If the first user message is very short and contains these keywords, chat is filtered
# Comma-separated, case-insensitive
# WIKI_SKIP_KEYWORDS=warmup,test,hello,hi,ready

# Require code blocks or file references for a chat to be included (default: false)
# When enabled, only includes chats that contain actual work (code or file modifications)
# WIKI_REQUIRE_CONTENT=false

# Filter system notification tags from user messages (default: true)
# Removes <ide_opened_file>, <system-reminder>, and other system tags from wiki
# Set to false to keep all original user messages including system notifications
# WIKI_FILTER_SYSTEM_TAGS=true

# ============================================================================
# Book Export Settings
# ============================================================================

# Filter out trivial/pointless chats from book exports (default: true)
# When enabled, filters chats that are too short or appear to be warmup messages
# BOOK_SKIP_TRIVIAL=true

# Minimum number of messages required for a chat to be included (default: 3)
# Chats with fewer messages are considered trivial
# BOOK_MIN_MESSAGES=3

# Minimum total word count required for a chat (default: 75)
# Chats with fewer words across all messages are considered trivial
# BOOK_MIN_WORDS=75

# Keywords that indicate trivial chats (default: warmup,test,hello,hi,ready)
# If the first user message is very short and contains these keywords, chat is filtered
# Comma-separated, case-insensitive
# BOOK_SKIP_KEYWORDS=warmup,test,hello,hi,ready

# Generate descriptive filenames from chat content (default: true)
# When enabled, uses first user question or LLM to create meaningful filenames
# BOOK_GENERATE_TITLES=true

# Use LLM for title generation vs first question fallback (default: false)
# When true, uses OpenRouter API to generate descriptive titles (requires OPENROUTER_API_KEY)
# When false, uses first user question as filename
# BOOK_USE_LLM_TITLES=false

# Filter system notification tags from user messages (default: true)
# Removes <ide_opened_file>, <system-reminder>, and other system tags from book exports
# Set to false to keep all original user messages including system notifications
# BOOK_FILTER_SYSTEM_TAGS=true

# Remove tool use/result messages (default: true)
# Filters out technical tool execution details, keeping only conversation
# BOOK_FILTER_TOOL_NOISE=true

# Show file references at end of responses (default: true)
# When enabled, displays modified files in italics (e.g., *Files: config.py, main.py*)
# BOOK_SHOW_FILE_REFS=true

# Include conversation date in filename (default: true)
# When enabled, appends date to filename (e.g., topic-name-2025-11-09.md)
# Format: YYYY-MM-DD from first message timestamp
# BOOK_INCLUDE_DATE=true

# ============================================================================
# Sensitive Data Sanitization Settings
# ============================================================================

# Enable sanitization for exports (default: false)
# When enabled, automatically sanitizes sensitive data in all exports
# SANITIZE_ENABLED=false

# Sanitization level (default: balanced)
# Options:
#   - minimal: Only obvious API keys with known patterns
#   - balanced: Common patterns + contextual detection (recommended)
#   - aggressive: All potential secrets + additional patterns
#   - custom: Use only custom patterns defined below
# SANITIZE_LEVEL=balanced

# Redaction style (default: partial)
# Options:
#   - simple: Replace with "REDACTED"
#   - stars: Replace with "***"
#   - labeled: Replace with [API_KEY], [PASSWORD], etc.
#   - partial: Keep first/last chars (e.g., sk-ab***xyz)
#   - hash: Consistent hash (same value → same placeholder)
# SANITIZE_STYLE=partial

# Sanitize file paths - redact username/home directory (default: false)
# Example: /Users/mike/project → /Users/[USER]/project
# SANITIZE_PATHS=false

# Custom patterns to sanitize (comma-separated regex patterns)
# These patterns are ALWAYS sanitized regardless of level
# Example: mycompany-[a-z0-9]+,internal-token-.*
# SANITIZE_CUSTOM_PATTERNS=

# Allowlist patterns - NEVER sanitize these (comma-separated regex)
# Use for known-safe patterns that look like secrets but aren't
# Default: example\.com,localhost,127\.0\.0\.1
# SANITIZE_ALLOWLIST=example\.com,localhost,127\.0\.0\.1

# Generate sanitization report (default: false)
# Creates a report showing what was sanitized
# SANITIZE_REPORT=false
